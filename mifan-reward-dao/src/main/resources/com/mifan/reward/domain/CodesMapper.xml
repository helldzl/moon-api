<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mifan.reward.domain.Codes">

    <!-- result map -->
    <resultMap id="codes" type="com.mifan.reward.domain.Codes">
        <id property="id" column="id" javaType="long"/>
        <result property="recordId" column="record_id" javaType="long"/>
        <result property="prizeId" column="prize_id" javaType="long"/>
        <result property="userId" column="user_id" javaType="long"/>
        <result property="code" column="code" javaType="long"/>
        <result property="enabled" column="enabled" javaType="int"/>
        <result property="creator" column="creator" javaType="long"/>
        <result property="modifier" column="modifier" javaType="long"/>
        <result property="created" column="created" javaType="date"/>
        <result property="modified" column="modified" javaType="date"/>
    </resultMap>

    <!-- sql -->
    <sql id="columns">
        <choose>
            <when test="fields != null and fields.size != 0">
                <foreach collection="fields" separator="," item="item" index="index">
                    `${item.fullname}`
                </foreach>
            </when>
            <otherwise>
                `id`, `record_id`, `prize_id`, `user_id`, `code`, `enabled`, `creator`, `modifier`, `created`, `modified` 
            </otherwise>
        </choose>
    </sql>

    <sql id="insertColumns">
        <trim suffixOverrides=",">
            <if test="id != null">
                `id`,
            </if>
            <if test="recordId != null">
                `record_id`,
            </if>
            <if test="prizeId != null">
                `prize_id`,
            </if>
            <if test="userId != null">
                `user_id`,
            </if>
            <if test="code != null">
                `code`,
            </if>
            <if test="enabled != null">
                `enabled`,
            </if>
            <if test="creator != null">
                `creator`,
            </if>
            <if test="modifier != null">
                `modifier`,
            </if>
            <if test="created != null">
                `created`,
            </if>
            <if test="modified != null">
                `modified`,
            </if>
        </trim>
    </sql>

    <sql id="insertEntityColumns">
        <trim suffixOverrides=",">
            <if test="insert.id != null">
                `id`,
            </if>
            <if test="insert.recordId != null">
                `record_id`,
            </if>
            <if test="insert.prizeId != null">
                `prize_id`,
            </if>
            <if test="insert.userId != null">
                `user_id`,
            </if>
            <if test="insert.code != null">
                `code`,
            </if>
            <if test="insert.enabled != null">
                `enabled`,
            </if>
            <if test="insert.creator != null">
                `creator`,
            </if>
            <if test="insert.modifier != null">
                `modifier`,
            </if>
            <if test="insert.created != null">
                `created`,
            </if>
            <if test="insert.modified != null">
                `modified`,
            </if>
        </trim>
    </sql>

    <sql id="insertValues">
        <trim suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="recordId != null">
                #{recordId},
            </if>
            <if test="prizeId != null">
                #{prizeId},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="code != null">
                #{code},
            </if>
            <if test="enabled != null">
                #{enabled},
            </if>
            <if test="creator != null">
                #{creator},
            </if>
            <if test="modifier != null">
                #{modifier},
            </if>
            <if test="created != null">
                #{created},
            </if>
            <if test="modified != null">
                #{modified},
            </if>
        </trim>
    </sql>

    <sql id="insertEntityValues">
        <trim suffixOverrides=",">
            <if test="insert.id != null">
                #{insert.id},
            </if>
            <if test="insert.recordId != null">
                #{insert.recordId},
            </if>
            <if test="insert.prizeId != null">
                #{insert.prizeId},
            </if>
            <if test="insert.userId != null">
                #{insert.userId},
            </if>
            <if test="insert.code != null">
                #{insert.code},
            </if>
            <if test="insert.enabled != null">
                #{insert.enabled},
            </if>
            <if test="insert.creator != null">
